  <body>
    <div class="navbar navbar-fixed-center">
        <div class="navbar-inner">
             <div class="container">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                       <span class="icon-bar"><img src="/css/nena.png"/></span>
                  </a>
                  <div class="nav-collapse">
                       <ul class="nav">
                            <li class="active"><a href="#">Aling Nena</a></li>
                            <li><a href="/products">Mga Paninda</a></li>
                            <li><a href="/about">Ang Pinagmulan</a></li>
                            <li><a href="/contact">Kontak</a></li>
                       </ul>
                  </div><!--/.nav-collapse -->
             </div><!-- container -->
        </div><!-- navbar-inner -->
    </div><!--  navbar navbar-fixed-top -->

    <div class="container">
      <div class="index">
      <div class="hd"><h1>Popular na Paninda</h1></div>
      <% @show.each do |shw| %>
        <div class="row-fluid">
          <% @products.first(10).each do |product| %>
              <% if shw.id == product.id %>
                <div class="col-xs-6 col-md-2">
                  <a href="/purchase_form/<%= product.id %>" class="thumbnail" style="text-decoration:none;">
                    <div class="caption">
                    <h3><%= product.name %></h3>
                    <p>Presyo: P<%= product.price %></p>
                    <p>Natitira: <%= product.quantity %></p>
                    </div>
                  </a>
                </div>
                <% end %>
           <% end %>   
        </div>  
      <% end %>
      <a href="/products"><img src="/css/index-btn.png"/></a>
      </div>
      <br/>
      <img src="/css/banner.png"/>
    </div><!-- /.container -->
