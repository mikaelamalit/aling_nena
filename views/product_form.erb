  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Aling Nena</a>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="admin">
        <h1><%= @product.new_record? ? "Gumawa ng Bagong Produkto" : "Palitan ang #{@product.name}" %></h1>
        <form role="form" method="POST" action="<%= @product.new_record? ? '/create_product' : "/update_product/#{@product.id}" %>">
          <form class="form-horizontal" role="form">
            <div class="form-group">
              <label for="name" class="col-sm-2 control-label">Pangalan</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="name" placeholder="Ilagay ang pangalan" value="<%= @product.new_record? ? '' : @product.name %>">
              </div>
            </div>
            <div class="form-group">
              <label for="price" class="col-sm-2 control-label">Presyo</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="price" placeholder="Ilagay ang presyo" value="<%= @product.new_record? ? '' : @product.price %>">
              </div>
            </div>
            <div class="form-group">
              <label for="quantity" class="col-sm-2 control-label">Bilang</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="quantity" placeholder="Ilagay ang dami" value="<%= @product.new_record? ? '' : @product.quantity %>">
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-default btn-primary"><%= @product.new_record? ? "Gumawa ng Bagong Produkto" : "Palitan ang #{@product.name}" %></button>
            </div>
            <a href="/admin"><img src="/css/index-btn.png"/></a>
          </form>

      </div>
    </div><!-- /.container -->

