  <body>

    <div class="navbar navbar-fixed-center">
        <div class="navbar-inner">
             <div class="container">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                       <span class="icon-bar"><img src="/css/nena.png"/></span>
