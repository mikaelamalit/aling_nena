    <div class="container">

      <div class="form-bg">
        <div class="hd"><h1><%= "Bilin ang #{@product.name}" %></h1></div>
        <p>Natitirang piraso: <b><%= @product.quantity %></b> na piraso<br/>
        Presyo nito: P<label for="price" name="price"><%= @product.price %></label></p>
        <form role="form" method="POST" action="<%= "/purchase/#{@product.id}" %>">
          <form class="form-horizontal" role="form">
            <div class="form-group">
              <label for="quantity" class="col-sm-2 control-label">Bilang ng Bibilin</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="quantity" placeholder="<%= "Ilan ang bibilin niyong #{@product.name}?" %>">
              </div>
            </div>
            <div class="form-group">
              <label for="bills" class="col-sm-2 control-label">Bilang ng Ipangpapabayad</label>
              <div class="row">
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="ones" placeholder="P1 na barya">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="fives" placeholder="P5 na barya">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="tens" placeholder="P10 na barya">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="twenties" placeholder="P20 na papel">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="fifties" placeholder="P50 na papel">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="hundreds" placeholder="P100 na papel">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="five_hundreds" placeholder="P500 na papel">
                </div>
                <div class="col-sm-2">
                  <input type="text" class="form-control" name="thousands" placeholder="P1000 na papel">
                </div>
            </div><br/>
                <button type="submit" class="btn btn-default btn-primary"><%= "Bilin ang #{@product.name}" %></button><br/><br/>
                <a href="/products"><img src="/css/index-btn.png"/></a>

          </form>
      </div>

    </div><!-- /.container -->

